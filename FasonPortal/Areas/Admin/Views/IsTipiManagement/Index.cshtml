@model IEnumerable<FasonPortal.Models.IsTipi>

@{
    ViewData["Title"] = "İş Tipi Yönetimi";
    Layout = "Admin_Layout";
}

<div class="indexbody mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card text-light shadow-lg rounded-3">
                <div class="card-header text-center bg-dark text-white rounded-top-3">
                    <h2>İş Tipi Yönetimi</h2>
                </div>
                <div class="card-body text-white rounded-bottom-3">
                    <div class="table-responsive">
                        <table class="table table-dark table-striped table-hover rounded-3 w-100">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">İş Tipi</th>
                                    <th scope="col">Atölye Sayısı</th>
                                    <th scope="col">İş Emri Sayısı</th>
                                    <th scope="col">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Ad</td>
                                        <td>@item.AtolyeIsler?.Count() </td>
                                        <td>@item.IsEmirleri?.Count() </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "IsTipiManagement", new { id = item.Id })" class="btn btn-primary btn-sm btn-block">Düzenle</a>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-danger btn-sm btn-block mt-2" onclick="return confirm('Bu iş tipini silmek istediğinize emin misiniz?');">Sil</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mb-4">
                        <a href="@Url.Action("Create", "IsTipiManagement", new { Area = "Admin" })" class="btn btn-primary w-100">Yeni İş Tipi Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .indexbody {
        margin-top: 150px;
    }

    body {
        background-color: #2c2c2c;
        color: #ffffff;
    }

    .card {
        background-color: #2c2c2c;
        border: none;
        box-shadow: 0 6px 20px rgba(139, 0, 0, 0.9);
        border-radius: 15px;
    }

    .card-header {
        border-bottom: 1px solid #8B0000;
        background-color: #121212;
        border-radius: 15px 15px 0 0;
    }

    .card-body {
        background-color: #2c2c2c;
    }

    .table {
        background-color: #121212;
        border-radius: 15px;
    }

    .table thead {
        background-color: #121212;
        border-bottom: 1px solid #8B0000;
        border-radius: 15px 15px 0 0;
        text-align: center;
    }

    .table tbody tr:hover {
        background-color: #3a3a3a;
    }

    .btn-primary {
        background-color: #8B0000;
        border-color: #8B0000;
        border-radius: 5px;
    }

    .btn-primary:hover {
        background-color: #600000;
        border-color: #600000;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        border-radius: 5px;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .d-flex .btn {
        margin: 0 4px;
    }

    .table-responsive {
        overflow-x: hidden;
    }

    .table {
        table-layout: fixed;
        width: 100%;
    }

    th, td {
        word-wrap: break-word;
        text-align: center;
    }

    .btn-block {
        width: 100%;
    }

    .mt-2 {
        margin-top: 0.5rem;
    }
</style>
