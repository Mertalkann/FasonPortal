@model FasonPortal.Models.IsTipi

@{
    ViewData["Title"] = "İş Tipi Düzenle";
    Layout = "Admin_Layout";
}

<div class="editbody mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card text-light shadow-lg rounded-3">
                <div class="card-header text-center bg-dark text-white rounded-top-3">
                    <h2>İş Tipi Düzenle</h2>
                </div>
                <div class="card-body text-white rounded-bottom-3">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mt-3">
                            <label for="Ad">İş Tipi Adı</label>
                            <input type="text" class="form-control bg-secondary text-light border-light rounded-3" asp-for="Ad" required />
                            @Html.ValidationMessageFor(m => m.Ad, "", new { @class = "text-danger" })
                        </div>

                        <button type="submit" class="btn btn-primary mt-4 w-100">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .editbody {
        margin-top: 150px;
    }

    body {
        background-color: #2c2c2c;
        color: #ffffff;
    }

    .card {
        background-color: #2c2c2c;
        border: none;
        box-shadow: 0 6px 20px rgba(139, 0, 0, 0.9);
        border-radius: 15px;
    }

    .card-header {
        border-bottom: 1px solid #8B0000;
        background-color: #121212;
        border-radius: 15px 15px 0 0;
    }

    .card-body {
        background-color: #2c2c2c;
    }

    .form-control {
        background-color: #2c2c2c;
        border: 1px solid #2c2c2c;
        color: #ffffff;
        border-radius: 5px;
    }

    .form-control:focus {
        background-color: #343a40;
        color: #ffffff;
        box-shadow: 0 0 0 0.2rem rgba(139, 0, 0, 0.9);
    }

    .btn-primary {
        background-color: #8B0000;
        border-color: #8B0000;
        border-radius: 5px;
    }

    .btn-primary:hover {
        background-color: #600000;
        border-color: #600000;
    }
</style>
