@model FasonPortal.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="logincard mt-10">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-light rounded-3">
                <div class="card-header text-center">
                    <img src="~/images/ason.png" alt="Login Image" class="img-fluid mb-3" style="max-width: 300px;">
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <label asp-for="Email">Username</label>
                            <input asp-for="Email" class="form-control text-light border-light rounded-10" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control text-light border-dark rounded-10" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check mt-3">
                            <input asp-for="RememberMe" class="form-check-input border-dark rounded-3" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>
                        <button type="submit" class="btn btn-danger rounded-3 mt-3 w-100">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #121212;
        color: #ffffff;
        box-shadow: 0 0 20px #3b0000;

    }
    .logincard {
        margin-top: 150px;
    }
    .form-control {
        background-color: #2c2c2c;
        color: #ffffff;
    }
    .form-control:focus {
        box-shadow: 0 0 0 0.2rem #ff0000;
        background-color: #2c2c2c;
        color: #ffffff;
    }
    .form-control:hover {
        background-color: #2c2c2c;
        color: #ffffff;
    }
    .form-check-input:checked {
        background-color: #ff0000;
        border-color: #ff0000;
    }
    .btn-danger {
        background-color: #ff0000;
        border-color: #ff0000;
    }
    .btn-danger:hover {
        background-color: #e60000;
        border-color: #cc0000;
    }
    .card-header img {
        max-width: 150px;
    }
</style>
