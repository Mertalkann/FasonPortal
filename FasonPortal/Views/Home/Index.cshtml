@{
    ViewData["Title"] = "Home";
}
<div class="homecard mt-10">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card text-center shadow-lg rounded-3">
                <div class="card-header bg-dark text-white rounded-top-3">
                    <img src="~/images/ason.png" alt="FasonPortal Logo" class="img-fluid mb-3" style="max-height: 250px;">
                </div>
                <div class="card-body bg-dark text-white rounded-bottom-3 p-4">
                    <p class="card-text">FasonPortal, fabrikalar ve fason atölyeler arasında iş akışını kolaylaştırmak amacıyla geliştirilmiş bir portaldır. 
                    Platform, kullanıcılara fabrikalar ile fason atölyeler arasında iş emirleri oluşturma, yönetme ve takip etme imkanı sunar. 
                    FasonPortal, güvenilirlik ve şeffaflığı esas alarak iş süreçlerini hızlandırır ve iş birliğini geliştirir.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #121212; /* Daha koyu bir arka plan rengi */
        color: #ffffff;
    }
    .card {
        background-color: #2c2c2c; /* Kartın arka plan rengini koyulaştır */
        border: none;
        box-shadow: 0 0 20px #3b0000;

    }
    .card-header {
        border-bottom: 1px solid #121212; /* Siyah renk tonu ile uyumlu sınır */
        background-color: #2c2c2c; /* Kartın üst kısmı arka plan rengini koyulaştır */
    }
    .card-body {
        border-top: 1px solid #121212; /* Siyah renk tonu ile uyumlu sınır */
        background-color: #2c2c2c; /* Kartın alt kısmı arka plan rengini koyulaştır */
        padding: 2rem; /* Padding ekleyerek kenarlardan uzaklaştır */
    }
    .img-fluid {
        max-height: 250px !important;
        height: auto !important;
        width: auto !important;
    }
    .rounded-3 {
        border-radius: 0.75rem;
    }
    .rounded-top-3 {
        border-top-left-radius: 0.75rem;
        border-top-right-radius: 0.75rem;
    }
    .rounded-bottom-3 {
        border-bottom-left-radius: 0.75rem;
        border-bottom-right-radius: 0.75rem;
    }
    .homecard {
        margin-top: 150px;
        padding: 25px;
    }
</style>
